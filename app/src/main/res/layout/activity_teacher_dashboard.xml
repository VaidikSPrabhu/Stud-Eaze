<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherDashboardActivity">

    <LinearLayout
        android:id="@+id/teach_head"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/home_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dash"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hi, "
            android:textColor="#2c2a40"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/T_text_name"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Teacher"
            android:textColor="#fff"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/disSube"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Subject Code"
            android:layout_marginTop="-10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Welcome to teacher dashboard"
            android:textColor="#2c2a40"
            android:padding="-5dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/T_log_out"
            android:fontFamily="@font/poppins_semibold"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn"
            android:drawablePadding="-10dp"
            android:layout_marginTop="-175dp"
            android:layout_marginLeft="260dp"
            android:paddingStart="10dp"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:text="Logout" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/t_linear_horizontal1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/teach_head"
        android:layout_marginTop="75dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/take_attendance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_dash">


                <TextView
                    android:id="@+id/take_attendance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/take_attendance_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Attendance"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/take_attendance_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/attendance" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/T_marks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_dash">

                <TextView
                    android:id="@+id/T_marks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/T_marks_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Enter Marks"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/T_marks_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/score_card" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/t_linear_horizontal2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/t_linear_horizontal1"
        android:orientation="horizontal"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/T_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_dash">

                <TextView
                    android:id="@+id/T_notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/T_notice_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Notice"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/T_notice_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/notice" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/T_view_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_dash">

                <TextView
                    android:id="@+id/T_view_class_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/T_view_class_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Time Table"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/T_view_class_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/time_table" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_horizontal3"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/t_linear_horizontal2"
        android:orientation="horizontal"
        android:padding="10dp">

<!--        <Button-->
<!--            android:id="@+id/view_table"-->
<!--            android:layout_width="260dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginLeft="60dp"-->
<!--            android:background="@drawable/home_btn"-->
<!--            android:fontFamily="@font/poppins_semibold"-->
<!--            android:text="View Schedule"-->
<!--            android:textAlignment="center"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="#2C2A40"-->
<!--            android:textSize="24sp" />-->

    </LinearLayout>

</RelativeLayout>